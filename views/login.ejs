<%- include('partials/header') %> 

<style>
  body {
    background-color: #d6d6d6;
  }
  form {
    width: fit-content;
    margin: 100px auto 0;
    padding: 60px;
    background-color: #ffffff;
  }

  form a {
    color: rgb(36, 36, 36);
    text-decoration: none;
  }

  form a:hover {
    color: #494949;
    text-decoration: none;
  }
</style>

<form action="/auth/login" method="post">
  <h2>Login</h2>
    <div class="form-group">
      <label for="email"></label>
      <input type="email" name="email" class="form-control" placeholder="Email address" aria-describedby="helpId">
      <small id="helpId" class="text-muted">Eg johndoe@gmail.com</small>
    </div>

    <div class="form-group">
      <label for="password"></label>
      <input type="password" name="password" class="form-control" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button><br>
    <small><a href="/auth/signup">Don't have an account? Sign up</a></small>
</form>

<%- include('partials/footer') %> 