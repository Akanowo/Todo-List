<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todo-List</title>

    <link rel="stylesheet" href="/css/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav>
        <a href="#" class="navbar-brand">Todo List</a>
    </nav>
    <div class="main">
        <div class="box" id="heading">
            <!-- <div class=""> -->
            <div class="header">
                <h1><%= listTitle %></h1>
            </div>
        </div>
        <div class="box">
            <% todos.forEach(todo => { %>
            <form action="/lists/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= user_id %>" onchange="this.form.submit()">
                    <input type="hidden" name="todo" value="<%= todo %> ">
                    <p><%= todo %> </p>
                </div>
            </form>
            <% }) %>

            <form action="/lists" class="item" method="POST">
                <input class="itemEntry" type="text" name="newListItem" placeholder="Add Item" autocomplete="off">
                <button class="btn" type="submit" name="listName" value="<%= listTitle %> ">+</button>
            </form>
        </div>
    </div>
    <footer>
        <p>Developed by: Uko Akanowo &copy; 2019</p>
        <p>Gmail: ukoakanowo98@gmail.com</p>
    </footer>
</body>

</html>